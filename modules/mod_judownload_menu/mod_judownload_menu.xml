    <description>MOD_JUDOWNLOAD_MENU_XML_DESCRIPTION</description>

    <scriptfile>script.php</scriptfile>

    <languages folder="language">
        <language tag="en-GB">en-GB/en-GB.mod_judownload_menu.ini</language>
        <language tag="en-GB">en-GB/en-GB.mod_judownload_menu.sys.ini</language>
    </languages>

    <files>
        <filename module="mod_judownload_menu">mod_judownload_menu.php</filename>
        <filename>helper.php</filename>
        <filename>script.php</filename>
        <folder>tmpl</folder>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                        name="show_menu"
                        type="list"
                        default="0"
                        label="MOD_JUDOWNLOAD_MENU_FIELD_SHOW_MENU_LABEL"
                        description="MOD_JUDOWNLOAD_MENU_FIELD_SHOW_MENU_DESC">
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>
            </fieldset>
        </fields>
    </config>
